<Window x:Class="EquipRemont.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipRemont"
        mc:Ignorable="d"
        Title="EditUser" WindowStartupLocation="CenterScreen" MaxHeight="200" MaxWidth="300" MinHeight="200" MinWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Label>Фамилия:</Label>
                <Label>Имя:</Label>
                <Label>Логин:</Label>
                <Label>Пароль:</Label>
            </StackPanel>
            <StackPanel>
                <TextBox Margin="0,8,0,0" x:Name="surnameT" Width="100"></TextBox>
                <TextBox Margin="0,8,0,0" x:Name="nameT" Width="100"></TextBox>
                <TextBox Margin="0,8,0,0" x:Name="loginT" Width="100"></TextBox>
                <TextBox Margin="0,8,0,0" x:Name="passwordT" Width="100"></TextBox>
            </StackPanel>
            <Button Margin="10" VerticalAlignment="Top" Width="60" Click="Button_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>

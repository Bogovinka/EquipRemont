<Window x:Class="EquipRemont.EditUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipRemont"
        mc:Ignorable="d"
        Title="EditUser" WindowStartupLocation="CenterScreen" MaxHeight="200" MaxWidth="300" MinHeight="200" MinWidth="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="Фамилия" Margin="0,8,0,0" x:Name="surnameT" Width="100"></TextBox>
                <TextBox materialDesign:HintAssist.Hint="Имя" Margin="0,8,0,0" x:Name="nameT" Width="100"></TextBox>
                <TextBox  materialDesign:HintAssist.Hint="Логин" Margin="0,8,0,0" x:Name="loginT" Width="100"></TextBox>
                <TextBox  materialDesign:HintAssist.Hint="Пароль" Margin="0,8,0,0" x:Name="passwordT" Width="100"></TextBox>
            </StackPanel>
            <Button Margin="10" VerticalAlignment="Top" Width="60" Click="Button_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>

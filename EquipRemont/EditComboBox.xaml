<Window x:Class="EquipRemont.EditComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EquipRemont"
        mc:Ignorable="d"
        Title="Изменение" Height="100" Width="400" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <ComboBox x:Name="answerCB" DisplayMemberPath="Name" SelectedValue="{Binding ID}" SelectedValuePath="ID" FontSize="20"></ComboBox>
        <Button FontSize="20" Click="Button_Click">OK</Button>
    </StackPanel>
</Window>

